<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShiftsRedesigned" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/bright_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bright_gray</item>
        <item name="colorSecondaryVariant">@color/bright_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:windowBackground">@color/alabaster</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/bright_gray</item>
    </style>

    <style name="BottomAppBarTheme" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/bright_gray</item>
    </style>

    <style name="FloatingActionButtonTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorSecondary">@color/bright_gray</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bright_gray</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bright_gray_54</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bright_gray_54</item>
    </style>

</resources>