<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/tab_item_width_48"
    android:layout_height="@dimen/tab_item_height_64"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_4"
    android:paddingEnd="@dimen/spacing_4"
    tools:context=".ui.main.DatesAdapter">

    <TextView
        android:id="@+id/tv_date_item_date"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="top|center_horizontal"
        android:textColor="@color/selectable_text_color"
        android:textSize="@dimen/font_14"
        tools:text="17" />

    <TextView
        android:id="@+id/tv_date_item_weekday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_8"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="top|center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/selectable_text_color"
        android:textSize="@dimen/font_14"
        tools:text="вт" />

</LinearLayout>
